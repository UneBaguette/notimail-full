{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "__tests__/**/*.ts", "./*.ts"],
  "exclude": ["node_modules"]
}
